		$(".tel3").inputmask("+7 (9999) 99-99-99");
		$(".wa").inputmask("79999999999");
       
});

/**
 * Adds a mask to input fields with the class "price" to separate thousands from units with a space.
 */
function addPriceMask() {
  // Get all input fields with the class "price"
  const priceInputs = document.querySelectorAll('.price');

  // Loop through each input field
  priceInputs.forEach((input) => {
    // Add an event listener to the input field
    input.addEventListener('input', (event) => {
      // Get the current value of the input field
      let value = event.target.value;

      // Remove any non-numeric characters from the value
      value = value.replace(/\D/g, '');

      // Add a space every 3 digits from the right
      value = value.replace(/\B(?=(\d{3})+(?!\d))/g, ' ');

      // Update the value of the input field with the formatted price
      event.target.value = value;
    });
  });
}

// Call the addPriceMask function to apply the mask to all input fields with the class "price"
addPriceMask();
</script>



